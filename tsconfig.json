{
	"compilerOptions": {
		"allowJs": true,
		"target": "es5",
		"allowUnreachableCode": false,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
	},
	"lib": [
		"es2016",
		"dom"
	],
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./dist/**/*",
		"./db-data/**/*"
	]
}